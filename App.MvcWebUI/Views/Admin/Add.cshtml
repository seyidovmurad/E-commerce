@model AddEditProductViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex flex-column justify-content-center align-content-center">
    <h2 class="align-self-center">Add a product</h2>

    <form asp-controller="Admin" asp-action=@(Model.IsActionAdd ? "Add" : "Update") method="post" class="w-50 align-self-center">
        @if(!Model.IsActionAdd) {
            <input type="hidden" asp-for="Product.ProductId" />
        }
        <div class="form-group m-3">
            <label asp-for="Product.ProductName"></label>
            <input asp-for="Product.ProductName" class="form-control" placeholder="Product Name" />
            <span asp-validation-for="Product.ProductName"></span>
        </div>
        <div class="form-group m-3">
            <label asp-for="Product.CategoryId"></label>
            <select asp-for="Product.CategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories,"CategoryId","CategoryName"))"></select>
            <span asp-validation-for="Product.CategoryId"></span>
        </div>
        <div class="form-group m-3">
            <label asp-for="Product.UnitPrice"></label>
            <input asp-for="Product.UnitPrice" class="form-control" min="0" placeholder="Product UnitPrice" />
            <span asp-validation-for="Product.UnitPrice"></span>
        </div>
        <div class="form-group m-3">
            <label asp-for="Product.UnitsInStock"></label>
            <input asp-for="Product.UnitsInStock" class="form-control" min="0" placeholder="Product UnitsInStock" />
            <span asp-validation-for="Product.UnitsInStock"></span>
        </div>

        <input type="submit" value="Add Product" class="btn btn-xs btn-success m-3" />
    </form>
</div>